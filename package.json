{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "8",
    "node": "16"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "concurrently -n \"rev-api,reva-app,reva-admin\" -c \"blue,green,cyan\" -k \"npm run dev -w reva-api\" \"npm run dev -w reva-app\" \"npm run dev -w reva-admin\"",
    "start": "echo 'using staging db'",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/reva-api",
    "packages/reva-admin",
    "packages/reva-app"
  ],
  "dependencies": {
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged -w reva-app"
    }
  }
}
