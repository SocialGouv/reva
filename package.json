{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "10",
    "node": "20"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "concurrently -n \"rev-api,reva-app,reva-admin,reva-admin-react\" -c \"blue,green,cyan\" -k \"npm run dev -w reva-api\" \"npm run dev -w reva-app\" \"npm run dev -w reva-admin\"",
    "front-apps": "concurrently -n \"reva-app,reva-admin,reva-admin-react\" -c \"green,cyan\" -k \"npm run dev -w reva-app\" \"npm run dev -w reva-admin\"",
    "start": "npm run start --workspace=reva-api",
    "cron": "npm run cron --workspace=reva-api",
    "prepare": "husky install",
    "lint-staged": "npm run lint-staged --workspaces --if-present",
    "lint-all": "npm run lint-all --workspaces --if-present",
    "test-api": "npm run test --workspace=reva-api"
  },
  "workspaces": [
    "packages/reva-api",
    "packages/reva-admin",
    "packages/reva-app"
  ],
  "dependencies": {
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged --workspaces --if-present"
    }
  }
}
