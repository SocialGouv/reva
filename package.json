{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "8",
    "node": "16"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "concurrently -n \"rev-api,reva-website,reva-app\" -c \"blue,green,cyan\" -k \"npm run dev -w reva-api\" \"npm run dev -w reva-website\" \"npm run dev -w reva-app\"",
    "start": "npm run start --workspace=reva-api",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/reva-api",
    "packages/reva-website",
    "packages/reva-app",
    "packages/reva-tests"
  ],
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^7.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged -w reva-app"
    }
  },
  "dependencies": {
    "@xstate/react": "^2.0.1"
  }
}
