{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "8",
    "node": "16"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "concurrently -n \"rev-api,reva-app,reva-admin\" -c \"blue,green,cyan\" -k \"npm run dev -w reva-api\" \"npm run dev -w reva-app\" \"npm run dev -w reva-admin\"",
    "start": "npm run start --workspace=reva-api",
    "cron": "npm run cron --workspace=reva-api",
    "test": "npm run cypress open --workspace=reva-tests",
    "prepare": "husky install",
    "lint-staged": "npm run lint-staged --workspaces --if-present",
    "lint-all": "npm run lint-all --workspaces --if-present"
  },
  "workspaces": [
    "packages/reva-api",
    "packages/reva-admin",
    "packages/reva-app",
    "packages/reva-tests"
  ],
  "dependencies": {
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged --workspaces --if-present"
    }
  }
}
