{
  "name": "reva-website",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "concurrently npm:dev:*",
    "build": "npm run build:css && npm run build:elm && cp -R ./dist ../reva-api/dist/website",
    "dev:elm": "elm-pages dev",
    "build:elm": "elm-pages build",
    "dev:css": "npm run css -- --watch",
    "build:css": "NODE_ENV=production npm run css -- --minify",
    "css": "npx tailwindcss -i ./css/style.css -o public/style.css"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "concurrently": "^7.0.0",
    "elm-optimize-level-2": "^0.2.3",
    "elm-pages": "2.1.11",
    "elm-review": "^2.7.0",
    "elm-tooling": "^1.7.0",
    "tailwindcss": "^3.0.16"
  }
}
