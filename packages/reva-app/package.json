{
  "name": "reva-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@capacitor/android": "^3.4.3",
    "@capacitor/cli": "^3.4.1",
    "@capacitor/core": "^3.4.1",
    "@capacitor/device": "^1.1.2",
    "@capacitor/ios": "^3.4.1",
    "@capacitor/splash-screen": "^1.2.2",
    "@capacitor/status-bar": "^1.0.8",
    "@headlessui/react": "^1.6.6",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@xstate/react": "^2.0.1",
    "html-react-parser": "^1.4.8",
    "purify-ts": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.4",
    "workbox-broadcast-update": "^5.1.4",
    "workbox-cacheable-response": "^5.1.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-google-analytics": "^5.1.4",
    "workbox-navigation-preload": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4",
    "workbox-streams": "^5.1.4",
    "xstate": "^4.30.6"
  },
  "scripts": {
    "dev": "react-scripts start",
    "dev:mobile": "CAPACITOR_LIVE_RELOAD=1 npx cap sync && PUBLIC_URL=/ react-scripts start",
    "build": "react-scripts build && cp -R ./build ../reva-api/dist/app",
    "build:mobile": "REACT_APP_API_GRAPHQL=https://reva.incubateur.net/graphql PUBLIC_URL=/ npm run build && npx cap sync",
    "build:resources": "cordova-res ios --skip-config --copy && cordova-res android --skip-config --copy && npx cap sync",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint-staged": "lint-staged",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "homepage": "/app",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.46",
    "@types/react": "^16.14.23",
    "@types/react-dom": "^16.9.14",
    "@xstate/inspect": "^0.7.0",
    "autoprefixer": "^10.4.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "framer-motion": "^6.2.8",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "react-scripts": "5.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1"
  }
}
