{
  "name": "reva-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts,json,graphql -w . ./index.ts | npx pino-pretty",
    "debug": "nodemon -e ts,json,graphql -w . --exec node --inspect-brk -r ts-node/register ./index.ts",
    "build": "npm run prisma:generate && npm run build:ts && npm run build:graphql",
    "build:ts": "rimraf -f ./dist && tsc -p tsconfig.json",
    "build:graphql": "rsync -R ./infra/graphql/**/*.graphql ./dist ",
    "start": "npm run prisma:migrate:deploy && npm run prisma:seed && node dist/index.js",
    "start:server:only": "node dist/index.js",
    "test": "dotenv -e .env.test -- prisma migrate reset --force && dotenv -e .env.test -- jest --runInBand --testRegex='.*.test.ts$'",
    "graphql:generate": "ts-node ./infra/generate-graphql-schema.ts",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:private-seed": "ts-node prisma/private-seed.ts",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "cron": "npx ts-node --transpileOnly --esm infra/cron.ts",
    "cron-dev": "npx ts-node --transpileOnly --esm infra/cron.ts | npx pino-pretty",
    "lint-staged": "lint-staged",
    "lint-all": "prettier --write \"{domain,infra}/**/*.{ts,md}\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-var-requires": "off"
    }
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "domain/**/*.{ts,md}": [
      "prettier --write"
    ],
    "infra/**/*.{ts,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/http-proxy": "^8.0.2",
    "@fastify/multipart": "^7.4.0",
    "@fastify/static": "^6.4.0",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.3",
    "@graphql-tools/resolvers-composition": "^6.5.15",
    "@graphql-tools/schema": "^8.3.2",
    "@keycloak/keycloak-admin-client": "^18.0.2",
    "@prisma/client": "^3.15.2",
    "basic-ftp": "^5.0.2",
    "cron": "^2.1.0",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.29.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "elastic-apm-node": "^3.27.0",
    "fast-csv": "^4.3.6",
    "fastify": "^4.0.3",
    "fastify-env": "2.1.1",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^18.0.1",
    "mercurius": "^10.0.0",
    "mjml": "^4.13.0",
    "pino": "^8.7.0",
    "purify-ts": "^1.2.0",
    "sib-api-v3-sdk": "^8.4.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cron": "^2.0.0",
    "@types/crypto-js": "^4.1.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mjml": "^4.7.0",
    "@types/node": "^18.0.7",
    "@types/ssh2-sftp-client": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.4",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "prisma": "^3.15.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.0",
    "typescript": "^4.7.4"
  }
}
