{
  "name": "reva-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "npm": "10",
    "node": "22"
  },
  "scripts": {
    "dev": "nodemon -e ts,json,graphql -w . --exec \"ts-node -r tsconfig-paths/register\" ./index.ts | npx pino-pretty",
    "build": "npm run prisma:generate && npm run graphql:generate && npm run graphql:generate-ts && npm run build:ts && npm run sync:graphql",
    "build:ts": "rimraf ./dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "sync:graphql": "rsync -R ./modules/*.graphql ./dist && rsync -R ./modules/**/*.graphql ./dist && rsync -R ./modules/**/**/*.graphql ./dist/modules ",
    "start": "npm run prisma:migrate:deploy && node dist/index.js",
    "start:server:only": "node dist/index.js",
    "pretest": "dotenv -e .env.test -- prisma generate",
    "test": "npm run graphql:generate && npm run graphql:generate-ts && dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "test:ui": "dotenv -e .env.test -- vitest --ui",
    "testModule": "dotenv -e .env.test -- vitest run",
    "graphql:generate": "tsx ./modules/generate-graphql-schema.ts",
    "graphql:generate-ts": "graphql-codegen --config codegen.ts",
    "graphql:watch-ts": "graphql-codegen --config codegen.ts --watch",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate:migration": "prisma migrate dev --create-only",
    "cron": "npx tsx@4.7.0 infra/cron.ts",
    "cron-dev": "npx tsx@4.7.0 infra/cron.ts | npx pino-pretty",
    "lint": "npm run graphql:generate && npm run graphql:generate-ts && eslint --color modules infra test scripts prisma/seed",
    "resetSandboxDb": "bash ./scripts/resetSandboxDb.sh && prisma migrate deploy"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.824.0",
    "@aws-sdk/s3-request-presigner": "^3.824.0",
    "@date-fns/tz": "^1.4.1",
    "@faker-js/faker": "^9.8.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/http-proxy": "^11.1.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/resolvers-composition": "^7.0.18",
    "@graphql-tools/schema": "^10.0.23",
    "@keycloak/keycloak-admin-client": "^24.0.2",
    "@prisma/client": "^5.21.1",
    "basic-ftp": "^5.0.5",
    "cron": "^4.3.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "fast-csv": "^5.0.2",
    "fastify": "^5.3.3",
    "fastify-env": "2.2.0",
    "fastify-plugin": "^5.0.1",
    "graphql-scalars": "^1.24.2",
    "graphql-upload-minimal": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^24.0.2",
    "lodash": "^4.17.21",
    "magic-bytes.js": "^1.12.1",
    "mercurius": "^16.1.0",
    "pdfkit": "^0.17.1",
    "pino": "^9.7.0",
    "pino-datadog-transport": "^3.0.6",
    "randomstring": "^1.3.1",
    "sib-api-v3-sdk": "^8.5.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/client-preset": "4.8.2",
    "@parcel/watcher": "^2.5.1",
    "@types/cron": "^2.4.3",
    "@types/crypto-js": "^4.2.2",
    "@types/debug": "^4.1.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.29",
    "@types/pdfkit": "^0.17.2",
    "@types/randomstring": "^1.3.0",
    "@types/ssh2-sftp-client": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
