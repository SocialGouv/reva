{
  "name": "reva-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts,json,graphql -w . ./index.ts | npx pino-pretty",
    "build": "npm run prisma:generate && npm run build:ts && npm run build:graphql",
    "build:ts": "rimraf ./dist && tsc -p tsconfig.json",
    "build:graphql": "npm run graphql:generate && rsync -R ./modules/*.graphql ./dist && rsync -R ./modules/**/*.graphql ./dist && rsync -R ./modules/**/**/*.graphql ./dist/modules ",
    "start": "npm run prisma:migrate:deploy && node dist/index.js",
    "start:server:only": "node dist/index.js",
    "pretest": "dotenv -e .env.test -- prisma generate",
    "test": "dotenv -e .env.test -- node --experimental-vm-modules node_modules/jest/bin/jest.js  -w 1 --testRegex='.*.test.ts$'",
    "testModule": "dotenv -e .env.test -- node --experimental-vm-modules node_modules/jest/bin/jest.js  -w 1",
    "graphql:generate": "tsx ./modules/generate-graphql-schema.ts",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate:migration": "prisma migrate dev --create-only",
    "cron": "npx tsx@4.7.0 infra/cron.ts",
    "cron-dev": "npx tsx@4.7.0 infra/cron.ts | npx pino-pretty",
    "eslint": "eslint modules infra",
    "lint": "npm run eslint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"{infra,modules}/**/*.{ts,md}\""
  },
  "prisma": {
    "seed": "npx tsx prisma/seed/seed.ts"
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "modules/**/*.{ts,md}": [
      "prettier --write",
      "eslint"
    ],
    "infra/**/*.{ts,md}": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.682.0",
    "@aws-sdk/s3-request-presigner": "^3.682.0",
    "@faker-js/faker": "^9.2.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/http-proxy": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.2",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.8",
    "@graphql-tools/resolvers-composition": "^7.0.2",
    "@graphql-tools/schema": "^10.0.7",
    "@keycloak/keycloak-admin-client": "^24.0.2",
    "@prisma/client": "^5.21.1",
    "basic-ftp": "^5.0.5",
    "cron": "^3.1.8",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "fast-csv": "^5.0.2",
    "fastify": "^5.1.0",
    "fastify-env": "2.2.0",
    "fastify-plugin": "^5.0.1",
    "graphql-scalars": "^1.23.0",
    "graphql-upload-minimal": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^24.0.2",
    "lodash": "^4.17.21",
    "magic-bytes.js": "^1.10.0",
    "mercurius": "^15.1.0",
    "mjml": "^4.15.3",
    "pino": "^9.5.0",
    "pino-datadog-transport": "^3.0.4",
    "sib-api-v3-sdk": "^8.5.0",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/cron": "^2.4.3",
    "@types/crypto-js": "^4.2.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.8.6",
    "@types/ssh2-sftp-client": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "prisma": "^5.21.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "5.4.5"
  }
}
