{
  "name": "reva-admin-react",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "10",
    "node": "22"
  },
  "scripts": {
    "predev": "react-dsfr update-icons && graphql-codegen --config codegen.ts",
    "dev": "next dev -p 3003",
    "prebuild": "react-dsfr update-icons && npm i --include=dev --prefix ../reva-api && npm run graphql:generate --prefix ../reva-api && graphql-codegen --config codegen.ts",
    "build": "next build && node copy-assets.js",
    "start": "node .next/standalone/packages/reva-admin-react/server.js",
    "lint": "eslint --color src cypress",
    "graphql:generate": "graphql-codegen --config codegen.ts",
    "graphql:watch": "graphql-codegen --config codegen.ts --watch",
    "cypress:open": "cross-env TZ=Europe/Paris cypress open",
    "cypress:ci": "cross-env TZ=Europe/Paris cypress run",
    "test:ci": "start-server-and-test 'PORT=3003 node .next/standalone/packages/reva-admin-react/server.js' http://localhost:3003/admin2/ cypress:ci",
    "test": "playwright test --project=chromium",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@codegouvfr/react-dsfr": "^1.23.4",
    "@date-fns/tz": "^1.2.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^4.1.3",
    "@strapi/blocks-react-renderer": "^1.0.2",
    "@tanstack/react-query": "^5.80.6",
    "@types/crypto-js": "^4.2.2",
    "@urql/exchange-auth": "^2.2.1",
    "crisp-sdk-web": "^1.0.25",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "jspdf": "^3.0.2",
    "jwt-decode": "^4.0.0",
    "keycloak-js": "^24.0.3",
    "lodash": "^4.17.21",
    "next": "^15.5.4",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.57.0",
    "react-hot-toast": "^2.5.2",
    "sharp": "^0.34.2",
    "urql": "^4.2.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.51",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/client-preset": "4.8.2",
    "@parcel/watcher": "^2.5.1",
    "@playwright/test": "^1.56.1",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10",
    "cross-env": "^10.1.0",
    "cypress": "^14.4.1",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.4.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  }
}
