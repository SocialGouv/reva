{
  "name": "reva-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "10",
    "node": "20"
  },
  "scripts": {
    "predev": "react-dsfr update-icons && graphql-codegen --config codegen.ts",
    "dev": "next dev -p 3002",
    "prebuild": "react-dsfr update-icons && node ./src/scripts/generateRobotsTxt.js && npm i --include=dev --prefix ../reva-api && npm run graphql:generate --prefix ../reva-api && npm run graphql:generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "graphql:generate": "graphql-codegen --config codegen.ts",
    "graphql:watch": "graphql-codegen --config codegen.ts --watch",
    "cypress:open": "cypress open",
    "cypress:ci": "cypress run",
    "test:ci": "start-server-and-test 'next start -p 3002' http://localhost:3002 cypress:ci"
  },
  "dependencies": {
    "@codegouvfr/react-dsfr": "^1.22.1",
    "@hookform/resolvers": "^3.9.1",
    "@strapi/blocks-react-renderer": "^1.0.1",
    "@tanstack/react-query": "^5.59.16",
    "graphql-request": "^6.1.0",
    "lodash": "^4.17.21",
    "next": "^15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.1",
    "react-hot-toast": "^2.4.1",
    "sharp": "^0.33.5",
    "urql": "^4.2.0",
    "use-debounce": "^10.0.4",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.0",
    "@parcel/watcher": "^2.5.0",
    "@playwright/test": "^1.51.1",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "cypress": "^13.15.1",
    "eslint": "^8",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.3.3",
    "sass": "^1.86.0",
    "start-server-and-test": "^2.0.8",
    "tailwindcss": "^3.4.14",
    "typescript": "5.4.5"
  }
}
